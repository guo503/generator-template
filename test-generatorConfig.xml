<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 数据库驱动:选择你的本地硬盘上面的数据库驱动包-->
	<!--<classPathEntry location="D:\project\test\generator-template\mysql-connector-java-5.1.46.jar"/>-->
	<classPathEntry location="mysql-connector-java-5.1.46.jar"/>

	
    <context id="Mysql" targetRuntime="MyBatis3">
	    
		<!-- 注释用-->
		<property name="author" value="guos"/>
		
        <property name="javaFileEncoding" value="UTF-8"/>		
		
		    <!--基础服务项目路径前缀-->
        <property name="core_project_prefix" value="D:\project\test\springboot-base"/>
		
			    <!--基础服务包路径前缀-->
        <property name="core_package_prefix" value="com.tsyj"/>
		
	    <!--api项目路径前缀-->
        <property name="api_project_prefix" value="D:\project\test\springboot-base"/>
		
	    <!--api包路径前缀-->
        <property name="api_package_prefix" value="com.tsyj"/>
		
		
		 <!-- 配置pojo的序列化 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
		  <!-- 去掉get,set方法，添加Lombok注解-->
		 <plugin type="org.mybatis.generator.plugins.LombokPlugin" >
            <property name="hasLombok" value="true"/>
        </plugin>

		
		
		  <!-- 
			   ExtendModelPlugin插件(生成vo,cond,mapper配置)
				2.voProject：	         vo所在模块
				3.voPack：	             vo类所在包
				4.voSuffix：	         vo类后缀
				6.generatorPo:           是否重新生成po：     不写或者空或者false,不生成
				7.generatorMapper:       是否重新生成Mapper:  不写或者空或者false,不生成
				8.generatorXml:          是否重新生成Xml：    不写或者空或者false,不生成
				9.mapper:                mapper继承的基类
			    9.softDeleteMapper:      mapper继承的逻辑删除基类
				10.table:                po类表注释
		        11.id:                   主键注解
				12.version:              乐观锁注解
				13.condition:            Condition查询类
				14.limitCondition:       limitCondition查询类
				15.logicDelete           逻辑删除注解
				
		-->
		<plugin type="org.mybatis.generator.plugins.ExtendModelPlugin">
						
			<path name="voProject" value="src\main\java" type="api"/>
	
			<pack name="voPack" value="vo" type="api"/>

			<prop name="voSuffix" value="VO" enable="true"/>
			
			
			<path name="queryProject" value="src\main\java" type="api"/>
	
			<pack name="queryPack" value="query" type="api"/>

			<prop name="querySuffix" value="Query" enable="true"/>
			
			
			<prop name="generatorPo" value="true"/>
			
			<prop name="generatorMapper" value="true"/>
			
			<prop name="generatorXml" value="true"/>
			
			
			<prop name="mapper" value="mybatis.base.mapper.Mapper"/>
					
			<prop name="softDeleteMapper" value="mybatis.base.mapper.SoftDeleteMapper"/>
							
		    <prop name="table" value="mybatis.core.annotation.Table"/>
			
			<prop name="id" value="mybatis.core.annotation.Id"/>
			
			<prop name="version" value="mybatis.core.annotation.Version" />
			
		    <prop name="logicDelete" value="mybatis.core.annotation.LogicDelete" />
			
			<prop name="condition" value="mybatis.core.entity.Condition" />
			
			<prop name="limitCondition" value="mybatis.core.entity.LimitCondition"/>
			
		</plugin>
		
		
		
		
	    <plugin type="org.mybatis.generator.plugins.ManagePlugin">
		
			<prop name="enableAnnotation" value="true"/>
		
		    <path name="manageProject" value="src\main\java" type="core"/>
			
			<path name="manageImplProject" value="src\main\java" type="core"/>
	
			<pack name="managePack" value="service.manage" type="core"/>
			
			<pack name="manageImplPack" value="service.manage.impl" type="core"/>
		     
			<prop name="manageSuffix" value="Manage" enable="true"/>

	        <prop name="enableLogger" value="false"/>		
	
		</plugin>
		
		
		 <!-- 
			servcie生成插件
				1.serviceProject：       接口所在模块
				2.servicePack：	         接口所在包
				3.remote：	             remote注解所在包
				4.applicationName：	     Application类所在包
				5.serviceImplProject：	 实现类所在模块
				6.serviceImplPack：	     实现类所在包
				16.mapByIds:	         生成mapByIds方法
				17.map:	                 生成map方法
				18.listId:	             生成listId方法
				19.saveAndReturnId:	     生成插入返回id方法
		-->
		<plugin type="org.mybatis.generator.plugins.ServicePlugin">
		
			<prop name="enableAnnotation" value="true"/>
		
			<path name="serviceProject" value="src\main\java" type="core"/>
			
			<path name="serviceImplProject" value="src\main\java" type="core"/>
	
			<pack name="servicePack" value="service" type="core"/>
			
			<prop name="serviceSuffix" value="Service" enable="true"/>
			
			<pack name="serviceImplPack" value="service.impl" type="core"/>

	        <prop name="enableLogger" value="false"/>
	
		</plugin>
		
		
		
		<!-- 
			businessPlugin生成插件
				1.remoteResource：	            remoteResource类所在包
				2.businessProject：	            business类所在模块
				3.businessPack：	            business类所在包
				5.businessImplProject：	        business实现类所在模块
				6.businessImplPack：	        business实现类所在包
				7.businessSuffix                business类后缀
				8.doBatchMethod                 是否生成doBatch方法
				9.enableLogger                  是否生成logger日志
				10.exceptionPack:	            自定义异常类全路径
		-->
		<plugin type="org.mybatis.generator.plugins.BusinessPlugin">	
		
			<prop name="enableAnnotation" value="true"/>
			
		    <prop name="remoteResource" value=""/>
					
			<path name="businessProject" value="src\main\java" type="api"/>
			
			<pack name="businessPack" value="business" type="api"/>
			
			<path name="businessImplProject" value="src\main\java" type="api"/>
			
			<pack name="businessImplPack" value="business.impl" type="api"/>
			
			<prop name="businessSuffix" value="Business" enable=""/>
			
			<prop name="enableLogger" value="false"/>
		
			
		</plugin>
		
		
		
		
		
		<!-- 
			controller生成插件
				1.controllerProject：           controller所在模块
				2.controllerPack：	            controller所在包
				3.controllerSuffix：	        controller类后缀
				4.responseMethod	            Result类方法
				5.baseController:	            要继承的基础controller
				6.enableLogger                  是否生成logger日志
		--> 
		<plugin type="org.mybatis.generator.plugins.ControllerPlugin">
		
			<prop name="enableAnnotation" value="true"/>
		
			<path name="controllerProject" value="src\main\java" type="api"/>
	
			<pack name="controllerPack" value="controller" type="api"/>

			<prop name="controllerSuffix" value="Controller"/>
			
			<prop name="enableLogger" value="false"/>
			
		</plugin>
		
		
		
        <commentGenerator type="org.mybatis.generator.MyCommentGenerator">
            <property name="suppressDate" value="true"/>
			
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="false"/>
			
			<!-- 自定义注释 -->
			<property name="addRemarkComments" value="true" />
					
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://127.0.0.1:3306/tsyj?characterEncoding=utf8&amp;useInformationSchema=true&amp;useSSL=false" userId="root"
                        password="123456">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成模型的包名和位置-->
        <javaModelGenerator targetPackage="model" targetProject="src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="mapper" targetProject="src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="mapper" targetProject="src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <!-- 要生成的表 tableName是数据库中的表名或视图名 domainObjectName是实体类名-->
		  <!--  
		    1.enableBusiness:      是否生成business
			2.enableController:    是否生成controller
			3.versions             乐观锁列名
			4.enableVersions       是否启用乐观锁,只有versions配置才行
			5.逻辑删除列
		   -->
			<table tableName="country_code" domainObjectName="" enableManage="true" enableService="true" enableBusiness="true" enableController="true">
			   <prop name="versionCol"  value="version" enable="false"/>
			   <prop name="delCol"  value="is_del" />
			</table>
			
    </context>
</generatorConfiguration>